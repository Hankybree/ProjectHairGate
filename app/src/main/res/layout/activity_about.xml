<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical" >

         <!--
         backgrund(bild) bakom titel, inget gjort än?
         -->
         <ImageView
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:background="@color/title_background"/>

         <!--
         denna titel hamnar då framför
         -->
         <TextView
             android:id="@+id/Title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:includeFontPadding="true"
             android:textColorHighlight="@color/blue1"
             android:textAlignment="center"
             android:text="Titel framför bild"
             android:textSize="30sp"/>

         <TextView
             android:id="@+id/_contact"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="30sp"
             android:textAlignment="center"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/Contact_title"
             android:textSize="20sp"/>

         <TextView
             android:id="@+id/phone_number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:includeFontPadding="true"
             android:padding="10sp"
             android:layout_marginStart="40dp"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/phone" />

         <TextView
             android:id="@+id/Email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:includeFontPadding="true"
             android:padding="10sp"
             android:layout_marginStart="40dp"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/email" />

         <TextView
             android:id="@+id/Time_open"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textAlignment="center"
             android:includeFontPadding="true"
             android:padding="10sp"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/time_open"
             android:textSize="20sp"/>

         <TextView
             android:id="@+id/schedule"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:includeFontPadding="true"
             android:padding="10sp"
             android:layout_marginStart="40dp"
             android:textColor="@color/font_aboutActivity"
             android:text=" Måndag/Torsdag/Fredag: \n\n       08.30 – 18.00 \n\n Tisdag/Onsdag: \n\n        08.30 – 18.30 \n\nLördag: \n\n       09.00 – 13.00" />

         <TextView
             android:id="@+id/adress"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:includeFontPadding="true"
             android:padding="10sp"
             android:layout_marginStart="40dp"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/adress" />

         <TextView
             android:id="@+id/maps_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textAlignment="center"
             android:includeFontPadding="true"
             android:padding="10sp"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/maps"
             android:textSize="30sp" />

         <TextView
             android:id="@+id/map_info"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="20dp"
             android:textColor="@color/font_aboutActivity"
             android:text="@string/Map_info" />

         <com.google.android.gms.maps.MapView
             android:id="@+id/Google_maps"
             android:layout_width="match_parent"
             android:layout_height="500dp"
             android:background="@color/blue1" />

      </LinearLayout>

   </ScrollView>

</LinearLayout>








